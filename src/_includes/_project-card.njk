{%- macro projectCard(role, description, image) -%}
<div class="work">
  <figure>
    {% if image %}
      <img
        width="{{ image.width | default('100%') }}"
        height="{{ image.height | default('auto') }}"
        {% if image.width and image.height %}style="aspect-ratio: {{ image.width }} / {{ image.height }}"{% endif %}
        src="{{ image.src }}"
        alt="{{ image.alt }}"
        loading="lazy"
      />
      {% if image.title %}
        <figcaption class="noselect">{{ image.title }}</figcaption>
      {% endif %}
    {% endif %}
  </figure>
  {% if role %}
    <span class="role noselect">{{ role }}</span>
  {% endif %}
  {% if description %}
    <span class="description prevent-orphan">{{ description | safe }}</span>
  {% endif %}
</div>
{%- endmacro -%}