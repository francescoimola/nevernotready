<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{ title }}</title>
    {%- include "_meta.html" -%}
    <!-- Resource hints -->
    <link rel="preload" as="style" href="{{ '/css/style.css' | url }}" />
    <link
      rel="preload"
      href="/fonts/InterVariable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}" />
    <!-- Critical JS -->
    <script src="https://unpkg.com/cloudinary-core@latest/cloudinary-core-shrinkwrap.js"></script>
  </head>
  <body>
    {%- include "_header.njk" -%}
    <div class="wrapper">
      {{ content | safe }}
    </div>
    {%- include "_footer.njk" -%}
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        new unorphanize("p, h2, h3, small, li, span");
        new unorphanize( "h1", { companions: 2 } );
      });

      var cl = cloudinary.Cloudinary.new({cloud_name: "dax6x2pto"});
      cl.responsive();
    </script>
    <script src="/assets/js/vanilla-unorphanize.min.js"></script>
    <script src="/assets/js/slideFrame.min.js"></script>
  </body>
</html>
